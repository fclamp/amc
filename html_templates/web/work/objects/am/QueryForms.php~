		'RocClass',
		'RocRockName',
		'SqsSiteName',
		'TekDescription',
		'TekName',
		'ZooSex_tab',
		'ZooStage_tab',
	);

	var $Hints = array(
		'ExtendedData' 			=> '[ eg. Newcastle ]',
		'QuiTaxonomyClass'		=> '[ eg. Malacostraca ]',
		'QuiTaxonomyFamily'		=> '[ eg. Lysiosquillidae ]',
