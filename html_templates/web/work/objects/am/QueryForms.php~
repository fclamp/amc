		'CatRegNumber',
		'CitTypeStatus_tab',
		'ExtendedData',
		'LocSubstrate',
		'MetClass',
		'MetGroup',
		'MetName',
		'MetTypeSymbol',
		'MinClass',
		'MinGroup',
		'MinSpecies',
		'MinVariety',
		'ObjKeywords_tab',
		'ObjLabel',		
		'ProCollectionArea',
		'ProCountry_tab',
		'ProPlace',
		'ProStateProvince_tab',
		'QuiHabitat_tab',
		'QuiLatLongDetermination',
		'QuiLatitude0',
