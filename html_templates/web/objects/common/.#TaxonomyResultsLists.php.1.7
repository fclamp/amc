		foreach ($this->linkFields as $field)
		{
			if ($this->_STRINGS[$field])
				$taxonHeadings[] = $this->_STRINGS[$field];
			else	
				$taxonHeadings[] = $field;
		}
		foreach ($this->standAloneFields as $field)
		{
